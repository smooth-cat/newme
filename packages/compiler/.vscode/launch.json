{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node Debugger",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "/Users/linjiajian/.nvm/versions/node/v14.19.3/bin/node" // where node
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Babel Plugin",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/rollup/dist/bin/rollup",
      "args": ["-c"],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
